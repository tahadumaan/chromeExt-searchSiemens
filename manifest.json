{
  "manifest_version": 2,
  "name": "Anıt_Siemens_Ext",
  "description": "İstenildiği anda Siemens'ten ürün arama eklentisi",
  "version": "1.0",
  "icons": {
    "16": "/images/icon16.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Siemens Database"
  }
}
